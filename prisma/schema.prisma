generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  first         String
  last          String
  email         String          @unique
  password      String
  role          Roles
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  DoctorPatient DoctorPatient[] @relation("DoctorPatient")
  PatientDoctor DoctorPatient[] @relation("PatientDoctor")
  PatientData   PatientVitals?
}

model PatientVitals {
  id            Int      @id @default(autoincrement())
  bloodPressure String?
  heartRate     String?
  oxygenLevel   String?
  temperature   String?
  weight        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  patient       User     @relation(fields: [patientId], references: [id])
  patientId     Int      @unique
}

model DoctorPatient {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  patientId Int
  patient   User     @relation("PatientDoctor", fields: [patientId], references: [id])
  doctor    User     @relation("DoctorPatient", fields: [doctorId], references: [id])
  addedTime DateTime @default(now())

  @@unique([doctorId, patientId])
}

enum Roles {
  doctor
  patient
}
